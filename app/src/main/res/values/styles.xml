<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BottomNavigationItem" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/playfair_display_bold</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationItem</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationItem</item>
        <item name="itemIconTint">@color/bottom_navigation_item_selector</item>
        <item name="itemTextColor">@color/bottom_navigation_item_selector</item>
        <item name="itemIconSize">@dimen/widget_32</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Light" parent="AppTheme.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="Light" parent="AppTheme.NoActionBar.Light">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CategoryItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:fontFamily">@font/playfair_display_black</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>
    <style name="CategoryItemSeeAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@font/playfair_display_black_semibold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="CategoryMovieItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:fontFamily">@font/playfair_display_regular</item>
        <item name="android:textColor">@color/icon_unselect_color</item>
        <item name="layout_constraintHorizontal_chainStyle">packed</item>
    </style>


    <style name="Movies.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/playfair_display_black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Movies.H2" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/playfair_display_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorLayout.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/playfair_display_bold</item>
        <item name="android:textColor">@color/icon_unselect_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Movies.H4" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/playfair_display_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Movies.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/playfair_display_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Movies.S1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/playfair_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Movies.S2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/playfair_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Movies.Button" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/playfair_display_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Movies.Button2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/playfair_display_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Movies.Cast.Item_Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/playfair_display_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Movies.Cast.Item_Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/playfair_display_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Movies.B1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/playfair_display_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Movies.B2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/playfair_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/playfair_display_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UnfilledBorderedButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/Movies.Button</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/medium_margin</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">@dimen/medium_margin</item>
        <item name="rippleColor">#33AAAAAA</item>
    </style>

    <style name="Button.Main" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:fontFamily">@font/playfair_display_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">36dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>